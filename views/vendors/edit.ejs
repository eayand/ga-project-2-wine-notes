<%- include('../partials/header') %>

<h2><%= title %></h2>

<form id="edit-vendor-form" action="/vendors/<%= vendor._id %>?_method=PUT" method="POST">
    
    <label>Name</label>
    <input type="text" name="name" value="<%= vendor.name %>">

    <label>Address</label>
    <input type="text" name="address" value="<%= vendor.address %>">

    <label>Thoughts</label>
    <input type="text" name="thoughts" value="<%= vendor.thoughts %>">

    <input type="submit" value="Save Changes">

</form>

<%- include('../partials/footer') %>