<%- include('../partials/header') %>

<h2><span class="raleway">My Thoughts on  </span><%= wine.name %></h2>
<h3 class="raleway"><%= new Date().toLocaleDateString('en-us', { year:"numeric", month:"long", day:"numeric"}) %></h3>

<form id="new-note-form" action="/wines/<%= wine._id %>/notes" method="POST">

    <label class="raleway-bold">Vintage</label>
    <select name="vintage" class="note-vintage">
        <% let year = new Date().getFullYear() %> 
        <%-  `<option value="${year}">${year}</option>` %>
        <%-  `<option value="unknown">unknown</option>` %>
        <%    for (let i = 1; i < 101; i++) { %>
        <%-  `<option value="${year - i}">${year - i}</option>` %>
        <% } %>
    </select><br><br>
  
    <div class="slider">  
        <label class="raleway-bold">My Rating</label><br>    
        <input type="range" name="rating" min="1" max="5"><br><br>
        <div class="legend">
            <div class="numbers">1</div>
            <div class="numbers">2</div>
            <div class="numbers">3</div>
            <div class="numbers">4</div>
            <div class="numbers">5</div>
        </div>
    </div>
        <br><br>

    <label class="raleway-bold">Notes</label><br>
    <textarea name="body" class="note-body" cols="30" rows="30"></textarea><br><br><br>

    <input type="submit" value="Save Note">

</form>

<%- include('../partials/footer') %>
